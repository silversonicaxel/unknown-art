{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "src/*": ["./src/*"],
      "api/*": ["./src/api/*"],
      "tests/*": ["./tests/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2015",
  },
  "exclude": ["node_modules"],
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "vitest.setup.mts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
